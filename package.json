{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio",
  "scripts": {
    "devserver": "live-server src",
    "watch:sass": "sass --watch src/sass/main.scss:src/css/style.css ",
    "postcss": "postcss src/css/style.css -o src/css/style.css",
    "start": "npm-run-all --parallel devserver watch:sass",
    "build": "sass src/sass/main.scss src/css/style.css && postcss src/css/style.css -o src/css/style.css"
  },
  "author": "Ilija ZIkic",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "sass": "^1.89.2"
  }
}
